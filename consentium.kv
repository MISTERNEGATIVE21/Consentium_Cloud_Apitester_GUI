<ClearWindow>:
    name: "clearentries"

    api_key: api_key

    FloatLayout:

        Label:
            text:"Api_key: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.16

        TextInput:
            id: api_key
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.16



        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Clear Data"
            on_release:
                root.manager.transition.direction = "up"
                root.Cleardata()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: " Insert Data in Cloud ?"
            on_release:
                root.manager.transition.direction = "right"
                root.InsertBtn()


<MainWindow>:
    
    api_key: api_key
    

    FloatLayout:
  
        Label:
            id: api_key
            pos_hint:{"x": 0.2, "top":0.7}
            size_hint:0.9, 0.2
            text: "Email: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Send Data to Cloud"
            on_release:
                app.root.current = "insert"
                root.manager.transition.direction = "down"


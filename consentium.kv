<InsertWindow>:
    name: "insert"
    api_key: api_key
    board_key: board_key
    sensor1: sensor1
    sensor2: sensor2
    sensor3: sensor3
    sensor4: sensor4
    sensor5: sensor5
    sensor6: sensor6
    sensor7: sensor7

    FloatLayout:
        Label:
            size_hint: 0.5, 0.10
            pos_hint: {"x": 0, "top": 1}
            text: "API KEY: "
            font_size: (root.width**2 + root.height**2) / 16**4

        TextInput:
            pos_hint: {"x": 0.5, "top": 1}
            size_hint: 0.4, 0.10
            id: api_key
            multiline: False
            font_size: (root.width**2 + root.height**2) / 16**4

        Label:
            size_hint: 0.5, 0.10
            pos_hint: {"x": 0, "top": 0.9 - 0.70}
            text: "Board Key: "
            font_size: (root.width ** 2 + root.height ** 2) / 16 ** 4

        TextInput:
            pos_hint: {"x": 0.5, "top": 0.9 - 0.70}
            size_hint: 0.4, 0.10
            id: board_key
            multiline: False
            font_size: (root.width ** 2 + root.height ** 2) / 16 ** 4

        Label:
            size_hint: 0.5, 0.10
            pos_hint: {"x": 0, "top": 0.9}
            text: "Values for Sensor 1: "
            font_size: (root.width**2 + root.height**2) / 16**4

        TextInput:
            pos_hint: {"x": 0.5, "top": 0.9}
            size_hint: 0.4, 0.10
            id: sensor1
            multiline: False
            font_size: (root.width**2 + root.height**2) / 16**4

        # Repeat the above pattern for other sensors

        Button:
            pos_hint: {"x": 0.7, "top": 0.9 - 0.80}
            size_hint: 0.25, 0.12
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Clear the Database Entries"
            on_release:
                root.manager.transition.direction = "left"
                root.clearbtn()

        Button:
            pos_hint: {"x": 0.1, "top": 0.9 - 0.80}
            size_hint: 0.2, 0.12
            text: "Insert Data"
            font_size: (root.width**2 + root.height**2) / 15**4
            on_release:
                root.manager.transition.direction = "left"
                root.insert()

